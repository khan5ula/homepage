---
interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<div class="flex flex-wrap justify-center text-xs">
  <span>tags:</span>
  {
    tags.map((tag) => (
      <a
        href={`/tags/${tag}`}
        class="px-1 cursor-pointer underline underline-offset-4 hover:decoration-1 "
      >
        {tag}
      </a>
    ))
  }
</div>
