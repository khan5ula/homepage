---
interface Props {
  label: string
  textAreaId: string
  buttonId: string
  buttonLabel: string
}

import '../../../styles/global.css'

const { label, textAreaId, buttonId, buttonLabel } = Astro.props
---

<label for={textAreaId} class="block text-white text-center select-none"
  >{label}</label
>
<textarea id={textAreaId} class="comfy-text-area h-20 drop-shadow-sm"
></textarea>
<div class="text-right">
  <button
    id={buttonId}
    type="button"
    class="thing-button submit-button drop-shadow-lg">{buttonLabel}</button
  >
</div>
